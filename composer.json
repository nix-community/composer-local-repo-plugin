{
    "name": "drupol/composer-local-repo-plugin",
    "description": "A plugin for Composer which provides a command to create local Composer repository for your projects.",
    "license": "MIT",
    "type": "composer-plugin",
    "homepage": "https://github.com/drupol/composer-local-repo-plugin",
    "require": {
        "php": "^8.0 || ^8.1",
        "composer-plugin-api": "^2"
    },
    "require-dev": {
        "composer/composer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "loophp\\ComposerLocalRepoPlugin\\": "./src/"
        }
    },
    "extra": {
        "class": "loophp\\ComposerLocalRepoPlugin\\Plugin"
    }
}
